<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    tools:context=".chichu.FileGhiChu">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:gravity="center"
        android:paddingTop="10dp"
        android:text="Danh sách ghi chú"
        android:textSize="20dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/text"
        android:paddingRight="15dp"
        android:paddingBottom="20dp"
        android:paddingTop="5dp"
        android:paddingLeft="15dp">

        <ListView
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:id="@+id/listView"
            android:background="@drawable/background_edttextdo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="3dp" />

        <com.github.clans.fab.FloatingActionMenu
            android:id="@+id/addnote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="11dp"
            fab:menu_animationDelayPerItem="55"
            fab:menu_backgroundColor="@android:color/transparent"
            fab:menu_buttonSpacing="0dp"
            fab:menu_colorNormal="#3E4467"
            fab:menu_colorPressed="#ABD2D8"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="5dp"
            fab:menu_colorRipple="#99FFFFFF"
            fab:menu_fab_label="Thêm ghi chú"
            fab:menu_fab_size="normal"
            fab:menu_icon="@drawable/ic_baseline_create_new_folder_24"
            fab:menu_labels_colorNormal="#3E4467"
            fab:menu_labels_cornerRadius="3dp"
            fab:menu_labels_ellipsize="none"
            fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
            fab:menu_labels_margin="0dp"
            fab:menu_labels_maxLines="-1"
            fab:menu_labels_padding="8dp"
            fab:menu_labels_position="left"
            fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
            fab:menu_labels_showShadow="true"
            fab:menu_labels_singleLine="false"
            fab:menu_labels_textSize="14sp"
            fab:menu_openDirection="up">


        </com.github.clans.fab.FloatingActionMenu>
    </RelativeLayout>


</RelativeLayout>